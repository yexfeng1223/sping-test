<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


<!--    <bean id="helloWorld1" parent="helloWorld" p:name="yeyihang" scope="prototype" ></bean>-->

    <bean id="helloWorld" class="com.gsoft.test.HelloWorld" p:name="yefeng" scope="singleton">
        <property name="address" value="china"></property>
        <property name="car" ref="car"></property>

        <property name="dataSource" ref="dataSources"></property>
        <property name="cars">
            <list>
                <ref bean="car"></ref>
                <ref bean="car"></ref>
                <ref bean="car"></ref>
            </list>
        </property>

        <property name="carMap">
            <map>
                <entry key="AA" value-ref="car"></entry>
                <entry key="BB" value-ref="car"></entry>
                <entry key="CC" value-ref="car"></entry>
                <entry key="DD" value-ref="car"></entry>
            </map>
        </property>
    </bean>

    <bean id="dataSources" class="com.gsoft.test.DataSource">
        <property name="properties">
            <props>
                <prop key="user">root</prop>
                <prop key="password">1234</prop>
                <prop key="jdbcUrl">jdbc:mysql:////test</prop>
                <prop key="driverClass">com.gsoft.test.DataSource</prop>
            </props>
        </property>

    </bean>

    <bean id="datasource1" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="user" value="root"></property>
        <property name="password" value="1234"></property>
        <property name="driverClass" value="com.mysql.jdbc.Driver"></property>
        <property name="jdbcUrl" value="jdbc:mysql://test"></property>

    </bean>

    <bean id="car" class="com.gsoft.test.Car">
        <constructor-arg name="name" value="bmw"></constructor-arg>
        <constructor-arg name="jz" value="122" ></constructor-arg>
    </bean>
</beans>